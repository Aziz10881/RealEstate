@if (Apartments.Count > 0)
{
    
    <table class="table">
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col">NoRooms</th>
                <th scope="col">FloorNo</th>
                <th scope="col">Area</th>
                <th scope="col">Description</th>
                <th scope="col">Status</th>
                <th scope="col">City</th>
                <th scope="col">Price</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var apartment in Apartments)
            {
            <tr>
                <td>
                    <img src="@apartment.ImageURL" alt="apartment image" style="width:150px;" />
                </td>
                <td class="align-middle">
                    @apartment.NumOfRooms
                </td>
                <td class="align-middle">
                    @apartment.FloorNo
                </td>
                <td class="align-middle">
                    @apartment.Square m²
                </td>
                <td class="align-middle">
                    @apartment.Description
                </td>
                <td class="align-middle">
                    @apartment.Status
                </td>
                @*couldnt display name: @apartment.region.name doesnt work *@
                <td class="align-middle">
                    @apartment.RegionId
                </td>

                <td class="align-middle">
                    $@apartment.Price
                </td>

                <td class="align-middle">
                    <button type="button" class="btn btn-info" @onclick="() => RedirectToUpdate(apartment.Id)">Update</button>
                </td>
                <td class="align-middle">
                    <button type="button" class="btn btn-danger" @onclick="() => Delete(apartment.Id)">Delete</button>
                </td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <span>
        Loading Apartments...
    </span>
}